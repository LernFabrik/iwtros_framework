<?xml version="1.0"?>
<launch>
    <arg name="sim" default="true"/>
    <arg name="hardware_interface" default="PositionJointInterface"/>
    <arg name="robot_name" default="iiwa"/>
    <arg name="model" default="iiwa7"/>
    
    
    <group ns="iiwa">
        <include file="$(find iiwa_moveit_config)/launch/move_group.launch">
            <arg name="capabilities" default="true"/>
            <arg name="disable_capabilities" default="true"/>
        </include>
    </group>

    <!-- HARDWARE -->
    <!-- Working with the real robot.  -->
    <group ns="iiwa">
        
        <!-- Load controllers accordingly to parameters -->
        <include file="$(find iiwa_control)/launch/iiwa_control.launch">
            <arg name="hardware_interface" value="$(arg hardware_interface)" />
            <arg name="controllers" value="joint_state_controller $(arg hardware_interface)_trajectory_controller" />
            <arg name="robot_name" value="$(arg robot_name)" />
            <arg name="model" value="$(arg model)" />
        </include>
        
        <!-- Robot interface -->
        <include file="$(find iwtros_launch)/launch/robot_hw/iiwa_hw.launch" >
            <arg name="hardware_interface" value="$(arg hardware_interface)" />
        </include>
        
    </group>
</launch>